---
pageable: true
per_page: 10
---
<div class="section">
  <h2>Thoughts, Musings, and Other Things</h2>

  <% page_articles.each_with_index do |article, i| %>

    <div class="post">
      <h3><%= link_to article.title, article %></h3>
      <p>
        <%= article.summary %>
        <%= link_to 'Read moreâ€¦', article %>
      </p>
    </div>

  <% end %>

  <% if paginate && num_pages > 1 %>

    <% if prev_page %>
      <%= link_to 'Older posts', prev_page %>
    <% end %>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <%= link_to 'Newer posts', next_page %>
    <% end %>
  <% end %>

</div>